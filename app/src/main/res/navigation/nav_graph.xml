<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.itis.firstapp.ui.fragment.TasksFragment"
        android:label="MainFragment"
        tools:layout="@layout/tasks_fragment">
        <action
            android:id="@+id/action_mainFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.itis.firstapp.ui.fragment.AddTaskFragment"
        android:label="TaskFragment"
        tools:layout="@layout/add_task_fragment">
        <action
            android:id="@+id/action_taskFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>
